{
  "name": "mute_booth",
  "description": "mute goods in booth",
  "version": "1.0.0",
  "manifest_version": 3,
  "action" : {
    "default_title": "mute booth",
    "default_icon": "img/icon_16x16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://booth.pm/**"],
      "css": [
        "css/content_script.css"
      ],
      "js": [
        "js/content_script.js"        
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["img/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
